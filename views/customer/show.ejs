<% include ../partials/header %>
<% include ../partials/navbar %>
<div class="container-fluid">
	<di class="row">
		<div class="col-md-12">
			<div class="page-header">
				<h1 class="text-center">Danh sách các customer</h1>
			</div>
		</div>
	</di>
	<div class="row">
		<div class="col-md-12">
			<a href="/customer/deleteall" class="btn btn-danger" onclick="return confirmDelete()">Xóa tất cả customer</a>
		</div>
	</div>
	<di class="row">
		<div class="col-md-12">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Họ tên</th>
						<th>Email</th>
						<th>Số điện thoại</th>
						<th>Thao tác</th>
					</tr>
				</thead>
				<tbody>
					<% for( var i = 0; i < data.length; i++){ %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= data[i].name %></td>
							<td><%= data[i].email %></td>
							<td><%= data[i].phone %></td>
							<td>
								<a href="/customer/delete?id=<%= data[i].id %>" title="Xóa" class="delete" onclick="return confirmDelete()"><i class="glyphicon glyphicon-trash"></i> Xóa</a>
							</td>
						</tr>
					<% }%>
				</tbody>
			</table>
		</div>
	</di>
</div>
<% include ../partials/footer %>