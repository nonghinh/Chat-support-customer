<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container-fluid">
	<div class="page-header">
		<h1>Lịch sử chat</h1>
	</div>
	<div class="row">
		<div class="col-md-12">
			<a href="/chathistory/deleteall" class="btn btn-danger" onclick="return confirmDelete()">Xóa tất cả lịch sử chat</a>
		</div>
	</div>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Họ tên</th>
				<th>Email</th>
				<th>SĐT</th>
				<th>Thao tác</th>
			</tr>
		</thead>
		<tbody>
			<% for(var i = 0; i < data.length; i++){%>
				<tr>
					<td><%= i+1 %></td>
					<td><%= data[i].name %></td>
					<td><%= data[i].email %></td>
					<td><%= data[i].phone %></td>
					<td>
						<a href="/chathistory/viewcustomer?id=<%= data[i].id %>" title="Xem" class="edit" onclick="return confirmDelete()"><i class="glyphicon glyphicon-eye-open"></i>Xem</a>
						<a href="/chathistory/delete?id=<%= data[i].id %>" title="Xóa" class="delete" onclick="return confirmDelete()"><i class="glyphicon glyphicon-trash"></i> Xóa</a>
					</td>
				</tr>
			<% }%>
		</tbody>
	</table>
</div>
<% include ../partials/footer %>