<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container-fluid">
	<div class="page-header">
		<h1>Lịch sử chat</h1>
	</div>
	<div class="row">
		<div class="col-md-12">
			<a href="/chathistory/deleteall" class="btn btn-danger" onclick="return confirmDelete()">Xóa tất cả lịch sử chat</a>
		</div>
	</div>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Chater ID</th>
				<th>Loại</th>
				<th>Tin nhắn</th>
				<th>Thời gian</th>
				<th>Thao tác</th>
			</tr>
		</thead>
		<tbody>
			<% for(var i = 0; i < data.length; i++){%>
				<tr>
					<td><%= i+1 %> <script>
						document.write('1212');
					</script></td>
					<td><%= data[i].chater_id %></td>
					<td>
						<% if(data[i].type == 1){ %>
							Customer
						<%} else {%>
							supporter
						<%}%>
					</td>
					<td><%= data[i].message %></td>
					<td><%= data[i].datetime %></td>
					<td>
						<a href="/chathistory/delete?id=<%= data[i].id %>" title="Xóa" class="delete" onclick="return confirmDelete()"><i class="glyphicon glyphicon-trash"></i> Xóa</a>
					</td>
				</tr>
			<% }%>
		</tbody>
	</table>
</div>
<% include ../partials/footer %>